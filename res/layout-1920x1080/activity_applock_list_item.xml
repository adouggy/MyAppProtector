<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_list_item"
    android:layout_width="fill_parent"
    android:layout_height="30dp"
    android:paddingBottom="0dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/applock_list_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/applock_list_description"
        android:layout_marginLeft="5dp"
        android:scaleType="fitCenter" />

    <TextView 
        android:id="@+id/applock_list_label"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/applock_list_img"
        android:paddingLeft="15dp"
        android:maxLength="20" />
    
    <CheckBox
        android:id="@+id/applock_list_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp" />

</RelativeLayout>