<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.synergyinfosys.android.myappprotector"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.synergyinfosys.android.myappprotector.MainActivity"
            android:label="@string/app_name" >
        </activity>

        <service
            android:name="net.synergyinfosys.android.myappprotector.LongLiveService"
            android:enabled="true"
            android:label="LongLiveService" >
        </service>

        <activity
            android:name="net.synergyinfosys.android.myappprotector.PasswordActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_password"
            android:launchMode="singleInstance"
            android:theme="@style/FullscreenTheme" >
        </activity>
        
        <activity
            android:name="net.synergyinfosys.android.myappprotector.HomeActivity"
            android:label="安全桌面"
            android:theme="@style/Theme"
            android:clearTaskOnLaunch="true"
			android:stateNotNeeded="true"
			android:launchMode="singleTask"
			 >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>